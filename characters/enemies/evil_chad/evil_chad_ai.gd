func _decide_next_action(last_state: StringName) -> void:
	match last_state:
		&"ChaseClosestPlayer":
			transition_to(^"Attack")
		&"Attack":
			transition_to(^"Wait")
		&"Wait":
			transition_to(^"ChaseClosestPlayer")

